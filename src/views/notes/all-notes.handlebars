<body class="notes-bg">

<div class="col-md-12 mb-4 text-center">
<h1 class="display-2 font-weight-bolder">Tus Notas</h1>
<hr class="hr-light my-3 w-50">


<div class="row">
  {{#each notes}}
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{title}} <a href="/notes/edit/{{_id}}"><i class="fa fa-pencil"></i></a>
        </h4>
        <hr class="hr-light my-3">
        <p>{{description}}</p>
        <form action="/notes/delete/{{_id}}?_borrar=DELETE" method="POST">
          <input type="hidden" name="_borrar" value="DELETE">
          <button type="submit" class="btn btn-danger btn-block btn-sm">
            Delete
          </button>
</form>
      </div>
    </div>
  </div>
  {{/each}}
</div>
