<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card">
      <div class="card-header">
        Account Register
      </div>
      <div class="card-body">
        <form action="/users/signup" method="POST">
          <div class="form-group">
            <!-- value va a permitir mostrar los datos nuevamente que se tipeo antes -->
            <input type="text" class="form-control" name="name" placeholder="Ingresa tu Nombre" value="{{name}}">
          </div>
          <div class="form-group">
            <input type="email" class="form-control" name="email" placeholder="Ingresa tu Email" value="{{email}}">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Password">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="confirm_password" placeholder="Confirm Password">
          </div>
          <button class="btn btn-primary btn-block">
            sign up
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
